xvlog --incr --relax -L uvm -prj tb_top_vlog.prj >&1 | tee ../log/compile.log

if test $? -ne 0
then
echo compiling err occured...
exit 1
fi


xelab --incr --debug typical --relax --mt 8 -L xil_defaultlib -L uvm -L unisims_ver -L unimacro_ver -L secureip -L xpm --snapshot tb_top_behav xil_defaultlib.tb_top -log ../log/elaborate.log

if test $? -ne 0
then
echo elaborating err occured...
exit 1
fi

#xsim tb_top_behav -key {Behavioral:sim_1:Functional:tb_top} -tclbatch tb_top.tcl -log ../log/simulate.log $1
xsim tb_top_behav -key {Behavioral:sim_1:Functional:tb_top} --runall -log ../log/simulate.log $1
